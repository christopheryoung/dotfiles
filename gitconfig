[user]
	name = Christopher Young
	email = chris@chrisyoung.net

[apply]
	# Detect whitespace errors when applying a patch
	whitespace = fix

[color]
	diff = auto
	status = auto
	branch = auto
	# Use colors in Git commands that are capable of colored output when outputting to the terminal
	ii = auto

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	fold = commit --amend --no-edit
	count   = !git shortlog -sn
	df = diff
	stg = diff --staged
	logb = log --graph --decorate # branch log
	logd = log -p                 # diff log
	logf = log --stat             # file log
	unstage = reset HEAD --
	last = log -1 HEAD
	lastp = log -1 -p HEAD
	pushbld = push --receive-pack /utils/bin/git-receive-pack bld
	pullbld = pull --upload-pack /utils/bin/git-upload-pack bld

[push]
	default = current

[difftool "kdiff3"]
    path = /usr/local/bin/kdiff3
    trustExitCode = false

[difftool]
    prompt = false

[diff]
    tool = kdiff3

[mergetool "kdiff3"]
    path = /usr/local/bin/kdiff3
    trustExitCode = false

[mergetool]
    keepBackup = false

[merge]
    tool = kdiff3

# Lets me do git clone sdgr:mmshare.git, because I never remember that
# full path.
[url "ssh://pdx-git.schrodinger.com/var/git/repos/"]
    insteadOf = sdgr: